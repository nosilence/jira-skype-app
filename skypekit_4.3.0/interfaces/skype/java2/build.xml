<project basedir = "." default = "all" name = "sid-java2">

    <target name = "help">
        <echo>SkypeKit java wrapper build. Available targets:</echo>
        <echo>    help:         Display this help.</echo>
        <echo>    clean:        Removes files generated by other targets.</echo>
        <echo>    build:      	Compiles and installs api and ipc classes, desktop and android</echo>
        <echo>    client:       Compiles SkypekitClient classes.</echo>
        <echo>    docs:  		Removes all previous files and builds the jar library.</echo>
    </target>

    <target name = "clean">
        <ant antfile="build.xml" dir="api" target="clean" />
		<ant antfile="build.xml" dir="client" target="clean" />
    </target>

    <target name = "build">
        <ant antfile="build.xml" dir="api" target="install" />
        <ant antfile="build.xml" dir="client" />
    </target>

    <target name = "build-all">
        <ant antfile="build.xml" dir="api" target="all" />
        <ant antfile="build.xml" dir="client" target="install" />
    </target>

    <target name = "client" depends = "build">
		<ant dir="client" target="install" />
    </target>

   	<target name = "all" depends="clean,build,client" />
</project>

